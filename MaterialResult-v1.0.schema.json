  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.en10204.io/MaterialResult-v1.0.schema.json#",
  "definitions": {
    "ChemicalElement": {
      "type": "object",
      "description": "The chemical elements of the product.",
      "properties": {
        "Symbol": {
          "description": "The symbol of the element",
          "type": "string"
        },
        "ActualFrom": {
          "description": "The measured part of the element as absolute number.",
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "ActualTo": {
          "description": "The measured part of the element as absolute number.",
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "Minimum": {
          "description": "The minimum if defined by the product specification, otherwise the element must not provided.",
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "Maximum": {
          "description": "The maximum as defined by the product specification.",
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "TestMethod": {
          "description": "",
          "type": "string"
        }
      },
      "required": ["Symbol", "ActualFrom"],
      "additionalProperties": false
    },
    "ChemicalAnalysis": {
      "type": "object",
      "description": "",
      "properties": {
        "Sample": {
          "description": "",
          "type": "string"
        },
        "Position": {
          "description": "",
          "type": "string"
        },
        "Values": {
          "description": "",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/ChemicalElement"
          }
        },
        "Standards": {
          "description": "",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["Values"],
      "additionalProperties": false
    }
  },
  "TestResults": {
    "type": "object",
    "properties": {
      "ChemicalComposition": {
        "description": "",
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "#/definitions/ChemicalAnalysis"
        }
      }
    }
  }
}
